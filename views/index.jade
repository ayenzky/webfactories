  #blogs.blogs
    .container
      .subtitle.mb-40
            h1.title.mt-0 Blogs
      .row
        .col-md-12.blog-left.slide-bottom
          h2.mt-0.title-border Recent Blogs
          .row
            #home-article
              each post in posts.orderBy('date', 'desc').slice(0,3)              
                .col-md-4
                  .eq-ui-card
                    article.post-article
                      .article-banner
                        a.eq-ui-card-image.waves-effect.waves-block.waves-light(href=post.permalink)
                          img(src= post.banner)
                      .article-title
                        h3
                          a(href=post.permalink)= post.title
                      .article-publish
                        ul
                          li By
                            span.author-name= post.writer
                          li Posted
                            span= dateFormat(post.date, 'LL')
                      .article-body
                        p= post.shortdesc
                      .article-more
                        a.btn.btn-primary.btn-lg.eq-ui-waves-light(href=post.permalink) Read More

          .more-entries.mt-20
            a(href="/recent-blog") More Entries

            
